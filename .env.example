# BLS API Configuration
BLS_API_KEY=your_bls_api_key_here_optional
BLS_BASE_URL=https://api.bls.gov/publicAPI/v2/timeseries/data/

# Default Configuration
ZIP_CODE=55331
DEFAULT_BLS_SERIES=CUUR0000SEFJ01,APU0000709112

# Database Configuration
DATABASE_URL=sqlite:///data/cpi_benchmark.db

# Scraping Configuration
HEADLESS=true
SCRAPE_MAX_PAGES=5
SCRAPE_DELAY_RANGE_MS=500-1500
USER_AGENT_ROTATION=true
REQUESTS_PER_SECOND=0.5
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Configuration
DEBUG=false
ENVIRONMENT=development

# Frontend Configuration (if using React/Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development

# Production Configuration (set in Vercel dashboard)
# PRODUCTION_API_URL=https://your-domain.vercel.app
# STAGING_API_URL=https://your-staging-domain.vercel.app

# GitHub/Vercel Secrets (set in repository secrets)
# VERCEL_TOKEN=your_vercel_token
# ORG_ID=your_vercel_org_id
# PROJECT_ID=your_vercel_project_id
# SLACK_WEBHOOK=your_slack_webhook_url

# Alert Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@yourdomain.com
EMAIL_PASSWORD=your_email_password

# Security
SECRET_KEY=your-secret-key-for-sessions
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
